.gorilla-wrapper
  .gorilla-wrapper__mask
    .gorilla-title
      %span Gorilla diary .
    .gorilla-decorate
    .gorilla-contents
      .gorilla-message
        %h1 Thank you for coming to Gorilla Diary.
        %h4 Made this site for only you.
        %h2 Would you like some coffee or tea?
      .gorilla-items
        -if  user_signed_in?
          .btn__index
            = link_to diaries_path, class: "gorilla__btn" do
              %b 日記一覧
          .btn__logout
            = link_to destroy_user_session_path, method: :delete, class: "gorilla__btn" do
              %b ログアウト
        -else
          .btn__sign-up
            = link_to new_user_registration_path, class: "gorilla__btn" do
              %b 新規登録
          .btn__login
            = link_to new_user_session_path, class: "gorilla__btn" do
              %b ログイン